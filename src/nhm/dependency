$(NICAM_BINDIR)/$(PRJ_NHM01): $(BUILDDIR)/$(PRJ_NHM01)
	$(INSTALL) $< $@
	@echo; echo "##### PROGRAM $(notdir $<) is installed Successfully #####"; echo

$(BUILDDIR)/$(PRJ_NHM01) : $(PRG_NHM01).o $(NICAM_LIBDIR)/$(LIB_NHM) $(NICAM_LIBDIR)/$(LIB_SHARE)
	$(LD) $(LFLAGS) -o $@ $(addprefix $(BUILDDIR)/,$(notdir $^)) $(LAPACK_LIBS) $(NETCDF_LIBS) $(JCUP_JSP_LIBS)

$(NICAM_LIBDIR)/$(LIB_NHM): $(BUILDDIR)/$(LIB_NHM)
	$(INSTALL) $< $@
	@echo; echo "##### LIBRARY $(LIB_NHM) is installed Successfully #####"; echo

$(BUILDDIR)/$(LIB_NHM): $(MODS_NHM)
	$(AR) $(ARFLAGS) $@ $(patsubst %,$(BUILDDIR)/%,$(notdir $^))
	$(RANLIB) $@
